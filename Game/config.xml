      medic_mineral_cost = "50"
      medic_gas_cost = "25"
      tank_mineral_cost = "250"
      tank_gas_cost = "100"
      
      zergling_mineral_cost = "50"
      zergling_gas_cost = "10"
      hydralisk_mineral_cost = "75"
      hydralisk_gas_cost = "25"
      ultralisk_mineral_cost = "200"
      ultralisk_gas_cost = "200"
