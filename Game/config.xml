  <shortcuts_manager>
    <shortcut>
      <TYPE value = "REPEAT"/>
      <name value ="Focus Attack"/>
      <command value ="A"/>
    </shortcut>

    <shortcut>
      <TYPE value = "DOWN"/>
      <name value ="Locate Jim Raynor"/>
      <command value ="T"/>
    </shortcut>

    <shortcut>
      <TYPE value = "DOWN"/>
      <name value ="Locate Command Center"/>
      <command value ="Y"/>
    </shortcut>

    <shortcut>
      <TYPE value = "DOWN"/>
      <name value ="Locate Last Attack Position"/>
