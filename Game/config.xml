<!-- Config file for the game -->

<config>

  <!-- App Configuration -->
  <app framerate="0" />
  
  <!-- Each module has its own node. Separate configuration -->
  <window>
    <resolution width="640" height="480" scale="1"  />
    <properties borderless='false'
                fullscreen='false' 
                resizable='false'
                windowed='false' />
    <name>StarCraft</name>
  </window>

  <render vsync='false'>
  </render>

  <file_system>
    <path>data.zip</path>
    <path>Zerg.zip</path>
    <path>Terran.zip</path>
    <path>UI.zip</path>
    <path>Audio.zip</path>
    <path>Particles.zip</path>
	    
  </file_system>

  <game_manager>

    <!-- Game Information -->
    <totalWaves value = "1"/>


    <timeBeforeGameStarts value ="2.0f"/>
    <timeBetweenWavesPhase1 value = "10.0f"/>
    <timeBetweenWavesPhase2 value = "25.0f"/>
    <timeBetweenWavesPhase3 value = "10.0f"/>
    <timeBeforeWhileBombLanding value ="10.0f"/>
    <timeBeforeEnd value = "20.0f"/>  
    <!--Debug-->
    <hold value ="false"/>
    
    <!-- Wave Information -->    
    <SizeWave zerglings ="5" hydralisks ="0" mutalisks ="0" ultralisks ="0"/>
    <SizeWave zerglings ="7" hydralisks ="1" mutalisks ="0" ultralisks ="0"/>
    <SizeWave zerglings ="8" hydralisks ="3" mutalisks ="0" ultralisks ="0"/>
    <SizeWave zerglings ="12" hydralisks ="5" mutalisks ="0" ultralisks ="0"/>
    <SizeWave zerglings ="10" hydralisks ="3" mutalisks ="0" ultralisks ="0"/>
   
    <SizeWave2 zerglings ="1" hydralisks ="0" mutalisks ="0" ultralisks ="0"/>    
    
    <!-- Player Units -->
    <InitialSizePlayer marinesX="2" marinesY="2" medic ="1" scv ="1"/>
    <CommandCenterPosition coordx="1500" coordy= "2250"/>    
    
    <!-- Score--> 
    <ZerglingScore value = "20" />
    <HydraliskScore value = "40" />
    <MutaliskScore value = "50" />
    <UltraliskScore value = "100" />    
      
  </game_manager>

  <fonts>
    <default_font size="24" file="Font/Starcraft_Normal.ttf"/>
    <resources_font size="12" file="Font/OpenSans-Regular.ttf"/>
    <default_font size="12" file="Font/OpenSans-Regular.ttf"/>
  </fonts>
  
  <map>
    <folder>maps/</folder>
  </map>

 <gui>
    <atlas file="TerranConsole/UI_Panel_Terran2.png"/>
 </gui>
  
  
</config>