    <timeBeforeWhileBombLanding value ="10.0f"/>
    <timeBeforeEnd value = "10.0f"/>
    <timeBomb value = "120.0f" />
    
    <!--Debug-->
    <hold value ="false" />
    
    <!--<phase1 value ="false"/>
    <phase2 value ="false"/>
    <phase3 value ="false"/> -->   
    
    <!-- Wave Information  -->
    <SizeWave zerglings ="5" hydralisks ="0" mutalisks ="0" ultralisks ="0"/>
