<!-- Config file for the game -->

<config>

  <!-- App Configuration -->
  <app framerate="0" />
  
  <!-- Each module has its own node. Separate configuration -->
  <window>
    <resolution width="640" height="480" scale="1"  />
    <properties borderless='false'
                fullscreen='false' 
                resizable='false'
                windowed='false' />
    <name>StarCraft</name>
  </window>

  <render vsync='false'>
  </render>

  <file_system>
    <path>data.zip</path>
    <path>Zerg.zip</path>
    <path>Terran.zip</path>
    <path>UI.zip</path>
    <path>Audio.zip</path>
    <path>Particles.zip</path>
	    
  </file_system>

  <EntityManager>
    <costs
      bunker_mineral_cost = "200"
      bunker_gas_cost = "150"
      barrack_mineral_cost = "1000"
      barrack_gas_cost = "500" 
      factory_mineral_cost = "1000"
      factory_gas_cost = "500" 
      
      marine_mineral_cost = "50"
      marine_gas_cost = "50"
      firebat_mineral_cost = "50"
      firebat_gas_cost = "150"
      scv_mineral_cost = "50"
      scv_gas_cost = "0"
      medic_mineral_cost = "150"
      medic_gas_cost = "75"     
      tank_mineral_cost = "250"
      tank_gas_cost = "25" 
      
      zergling_mineral_cost = "50"
      zergling_gas_cost = "50" 
      hydralisk_mineral_cost = "50"
      hydralisk_gas_cost = "50" 
      ultralisk_mineral_cost = "50"
      ultralisk_gas_cost = "50" 
      mutalisk_mineral_cost = "50"
      mutalisk_gas_cost = "50"       
  />    
  </EntityManager>
  
  <game_manager>

    <!-- Game Information -->
    <totalWaves value = "2"/>
    <timeBeforeGameStarts value ="10.0f"/>
    <timeBetweenWavesPhase1 value = "10.0f"/>
    <timeBetweenWavesPhase2 value = "10.0f"/>
    <timeBetweenWavesPhase3 value = "10.0f"/>
    <timeBeforeWhileBombLanding value ="10.0f"/>
    <timeBeforeEnd value = "10.0f"/>
    <timeBomb value = "60.0f" />
    
    <!--Debug-->
    <hold value ="false"/>
    
    <!-- Wave Information -->    
    <SizeWave zerglings ="5" hydralisks ="0" mutalisks ="0" ultralisks ="0"/>
    <SizeWave zerglings ="7" hydralisks ="1" mutalisks ="0" ultralisks ="0"/>
