    <SizeWave2 zerglings ="1" hydralisks ="0" mutalisks ="0" ultralisks ="0"/>    
    
    <!-- Player Units -->
    <InitialSizePlayer marinesX="2" marinesY="2" medic ="1" scv ="1"/>
    <CommandCenterPosition coordx="2000" coordy= "2150"/>    
    
    <!-- Score--> 
    <ZerglingScore value = "20" />
    <HydraliskScore value = "40" />
    <MutaliskScore value = "50" />
